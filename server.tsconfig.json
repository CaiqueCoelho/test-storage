{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6"
    },
    "include": [
        "src/server/modules/**/*",
        "src/server/server.ts"
    ],
    "exclude": [
        "src/server/**/*.spec.ts"
    ]
}
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc/server",
        "mapRoot": "../dist/out-tsc/server",
        "skipLibCheck": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
{
  "name": "test-storage",
  "version": "0.42.0",
  "description": "Test Case Management System",
  "license": "GPLv3",
  "author": "Dmitry Zakharov",
  "private": true,
  "keywords": [
    "test management",
    "test case management"
  ],
  "bugs": {
    "url": "https://github.com/pumano/test-storage/issues"
  },
  "scripts": {
    "ng": "ng",
    "lint": "ng lint",
    "prebuild": "ts-node --project ./server/tsconfig.json ./server/modules/jwt-init.ts",
    "build": "ng build --prod && tsc -p ./server",
    "test": "jest",
    "serve": "ng serve --configuration hmr --progress=false",
    "clean": "rimraf node_modules package-lock.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "extract": "ngx-translate-extract --input ./src --output ./i18n/*.json --clean --sort --format namespaced-json"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm test"
    }
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "@angular/animations": "^8.2.14",
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/forms": "^8.2.14",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/pwa": "^0.803.20",
    "@angular/router": "^8.2.14",
    "@angular/service-worker": "^8.2.14",
    "@angularclass/hmr": "^2.1.3",
    "@auth0/angular-jwt": "^3.0.1",
    "@clr/angular": "^2.3.3",
    "@clr/icons": "^2.3.3",
    "@clr/ui": "^2.3.3",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@webcomponents/custom-elements": "^1.3.1",
    "angular2-notifications": "^2.0.0",
    "core-js": "^3.5.0",
    "font-awesome": "^4.7.0",
    "normalize.css": "^8.0.1",
    "rxjs": "^6.5.3",
    "socket.io-client": "^2.3.0",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.20",
    "@angular/cli": "^8.3.20",
    "@angular/language-service": "^8.2.14",
    "@biesbjerg/ngx-translate-extract": "^4.2.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "codelyzer": "~5.2.0",
    "concurrently": "^5.0.1",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-preset-angular": "^8.0.0",
    "protractor": "~5.4.2",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "~8.5.4",
    "tsconfig-paths": "^3.9.0",
    "tslint": "~5.20.1",
    "typescript": "~3.5.3"
  }
}

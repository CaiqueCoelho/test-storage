    "@biesbjerg/ngx-translate-extract": "^2.3.4",
    "@nestjs/cli": "^5.3.0",
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.4",
    "@types/chai-http": "3.0.5",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.0",

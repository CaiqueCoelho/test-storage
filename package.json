{
  "name": "test-storage",
  "version": "0.38.0",
  "description": "Test Case Management System",
  "license": "GPLv3",
  "author": "Dmitry Zakharov",
  "private": true,
  "keywords": [
    "test management",
    "test case management"
  ],
  "bugs": {
    "url": "https://github.com/pumano/test-storage/issues"
  },
  "scripts": {
    "lint": "ng lint",
    "clean": "rimraf node_modules package-lock.json",
    "prebuild": "ts-node ./server/modules/jwt-init.ts",
    "build": "ng build --prod && tsc -p ./server",
    "test": "ng test --watch=false --no-progress && npm run test:backend",
    "test:frontend": "./node_modules/.bin/istanbul cover ng test --watch=false --no-progress",
    "test:backend": "./node_modules/.bin/_mocha ./server/**/*.spec.ts --require ts-node/register --recursive --check-leaks -t 50000 --exit",
    "test:backend-e2e": "./node_modules/.bin/_mocha ./test/server/**/projects-.spec.ts --require ts-node/register --recursive --check-leaks -t 50000 --exit",
    "test:coverage": "ng test --code-coverage",
    "pree2e": "webdriver-manager update",
    "e2e": "ng e2e --no-progress --proxy-config proxy.conf.json",
    "start": "set NODE_ENV=production&&node ./dist/server/main.js",
    "hmr": "concurrently \"nodemon \" \"ng serve --hmr --progress=false --proxy-config proxy.conf.json\" ",
    "dev": "concurrently \"nodemon \" \"ng serve --progress=false --proxy-config proxy.conf.json\"  ",
    "extract": "ngx-translate-extract --input ./src --output ./i18n/*.json --clean --sort --format namespaced-json",
    "heroku-prebuild": "npm i -g @angular/cli ts-node",
    "heroku-postbuild": "npm run build",
    "ng": "ng"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run lint && npm test"
    }
  },
  "dependencies": {
    "@angular/animations": "^6.1.3",
    "@angular/common": "^6.1.3",
    "@angular/compiler": "^6.1.3",
    "@angular/compiler-cli": "^6.1.3",
    "@angular/core": "^6.1.3",
    "@angular/forms": "^6.1.3",
    "@angular/platform-browser": "^6.1.3",
    "@angular/platform-browser-dynamic": "^6.1.3",
    "@angular/router": "^6.1.3",
    "@angularclass/hmr": "^2.1.3",
    "@auth0/angular-jwt": "^2.0.0",
    "@clr/angular": "^0.13.0-beta.1",
    "@clr/icons": "^0.13.0-beta.1",
    "@clr/ui": "^0.13.0-beta.1",
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nestjs/mongoose": "^5.1.0",
    "@nestjs/swagger": "^2.3.0",
    "@nestjs/testing": "^5.1.0",
    "@ngx-translate/core": "10.0.2",
    "@ngx-translate/http-loader": "3.0.1",
    "@webcomponents/custom-elements": "^1.2.0",
    "angular2-notifications": "^1.0.2",
    "bcrypt": "^3.0.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "compression": "^1.7.3",
    "config": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.5.7",
    "database-updates": "^2.0.0",
    "express": "^4.16.3",
    "font-awesome": "^4.7.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.9",
    "morgan": "^1.9.0",
    "multer": "^1.3.1",
    "normalize.css": "^8.0.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",

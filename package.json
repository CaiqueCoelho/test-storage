{
  "name": "test-storage",
  "version": "0.29.0",
  "description": "Test Case Management System",
  "license": "GPLv3",
  "author": "Dmitry Zakharov",
  "private": true,
  "keywords": [
    "test management",
    "test case management"
  ],
  "bugs": {
    "url": "https://github.com/pumano/test-storage/issues"
  },
  "scripts": {
    "lint": "ng lint --type-check",
    "clean": "rimraf node_modules package-lock.json",
    "build": "ng build --prod && tsc -p ./server",
    "test": "ng test --single-run --no-progress && npm run test:backend",
    "test:frontend": "./node_modules/.bin/istanbul cover ng test --single-run --no-progress",
    "test:backend": "./node_modules/.bin/_mocha ./test/server/**/*.spec.ts --require ts-node/register --recursive --check-leaks -t 50000 --exit",
    "test:coverage": "ng test --code-coverage",
    "pree2e": "webdriver-manager update",
    "e2e": "ng e2e --no-progress --proxy-config proxy.conf.json",
    "start": "set NODE_ENV=production && node ./dist/server/server.js",
    "hmr": "concurrently \"nodemon \" \"ng serve --hmr -e=hmr --progress=false --proxy-config proxy.conf.json\" ",
    "dev": "concurrently \"nodemon \" \"ng serve --progress=false --proxy-config proxy.conf.json\"  ",
    "extract": "ngx-translate-extract --input ./src --output ./i18n/*.json --clean --sort --format namespaced-json",
    "heroku-prebuild": "npm i -g @angular/cli ts-node",
    "heroku-postbuild": "ng build --prod --no-progress",
    "ng": "ng"
  },
  "dependencies": {
    "@angular/animations": "^5.2.4",
    "@angular/common": "^5.2.4",
    "@angular/compiler": "^5.2.4",
    "@angular/compiler-cli": "^5.2.4",
    "@angular/core": "^5.2.4",
    "@angular/forms": "^5.2.4",
    "@angular/platform-browser": "^5.2.4",
    "@angular/platform-browser-dynamic": "^5.2.4",
    "@angular/router": "^5.2.4",
    "@angularclass/hmr": "^2.1.3",
    "@auth0/angular-jwt": "^1.0.0-beta.9",
    "@nestjs/common": "^4.5.9",
    "@nestjs/core": "^4.5.10",
    "@nestjs/microservices": "^4.5.8",
    "@nestjs/mongoose": "^3.0.1",
    "@nestjs/testing": "^4.5.5",
    "@nestjs/websockets": "^4.5.8",
    "@ngx-translate/core": "9.1.1",
    "@ngx-translate/http-loader": "2.0.1",
    "angular-tree-component": "^7.0.1",
    "angular2-notifications": "^0.9.7",
    "bcrypt": "^1.0.3",
    "bootstrap": "4.0.0",
    "compression": "^1.7.1",
    "config": "^1.29.4",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.5.3",
    "database-updates": "^2.0.0",
    "font-awesome": "^4.7.0",
    "jsonwebtoken": "^8.1.1",
    "mongoose": "^5.0.4",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "ngx-bootstrap": "^2.0.2",
    "nodemon": "^1.14.12",
    "normalize-css": "^2.3.1",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "^1.6.8",
    "@angular/language-service": "^5.2.4",
    "@biesbjerg/ngx-translate-extract": "^2.3.4",
    "@nestjs/cli": "^2.0.0-rc.3",
    "@types/chai": "^4.1.2",
    "@types/chai-http": "3.0.3",
    "@types/config": "0.0.34",
    "@types/faker": "^4.1.2",
    "@types/jasmine": "^2.8.6",
    "@types/jasminewd2": "^2.0.3",
    "@types/mocha": "2.2.48",
    "@types/supertest": "^2.0.4",
    "@types/bcrypt": "^1.0.0",
    "@types/node": "~9.3.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "codelyzer": "~4.1.0",
    "concurrently": "^3.5.1",
    "faker": "^4.1.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.1",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-typescript": "^3.0.12",
    "mocha": "^5.0.0",
